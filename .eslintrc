{
  "extends": ["react-native-wcandillon", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "max-len": ["warn", { "code": 200 }],
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": false,
        "singleAttributePerLine": true,
        "printWidth": 200
      }
    ],
    "react/jsx-max-props-per-line": ["warn", { "maximum": 1 }]
  }
}